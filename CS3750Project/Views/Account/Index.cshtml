@{
}
<h1>Account Details</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="#" method="post">
            <div class="text-danger"></div>

            <div class="form-group">
                <label for="CardNumber" class="control-label">Card Number</label>
                <input type="text" id="CardNumber" name="CardNumber" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ExpirationDate" class="control-label">Expiration Date</label>
                <input type="text" id="ExpirationDate" name="ExpirationDate" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CVC" class="control-label">CVC</label>
                <input type="text" id="CVC" name="CVC" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="AmountToPay" class="control-label">Amount to Pay</label>
                <input type="text" id="AmountToPay" name="AmountToPay" class="form-control" />
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Process Funds" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
